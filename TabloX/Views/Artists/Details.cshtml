@model TabloX.Models.ApplicationUser

@{
    ViewData["Title"] = "Sanatçı Profili";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">@Model.FullName</h4>
                    @if (!string.IsNullOrEmpty(Model.ArtistBio))
                    {
                        <p class="card-text">@Model.ArtistBio</p>
                    }
                    else
                    {
                        <p class="card-text text-muted">Henüz biyografi eklenmemiş.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h3>Eserler</h3>
            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="row">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Title">
                                }
                                <div class="card-body">
                                    <h5 class="card-title">@product.Title</h5>
                                    <p class="card-text">@product.Description</p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Kategori: @(product.Category?.Name ?? "Belirtilmemiş")
                                        </small>
                                    </p>
                                    <p class="card-text">
                                        <strong>Fiyat: @product.Price.ToString("C")</strong>
                                    </p>
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Detaylar</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <p class="text-muted">Henüz eser eklenmemiş.</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div> 