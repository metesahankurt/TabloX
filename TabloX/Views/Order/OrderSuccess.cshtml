@model TabloX.Models.Order
@{
    ViewData["Title"] = "Sipariş Başarılı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0 text-center">Siparişiniz Başarıyla Oluşturuldu!</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-success">
                        <h4 class="alert-heading">Sipariş Detayları</h4>
                        <hr>
                        <p class="mb-2"><strong>Sipariş Kodu:</strong> @ViewBag.OrderCode</p>
                        <p class="mb-2"><strong>Toplam Tutar:</strong> @ViewBag.OrderAmount TL</p>
                    </div>
                    
                    <div class="text-center mt-4">
                        <p class="mb-4">Siparişiniz için teşekkür ederiz. Siparişiniz en kısa sürede hazırlanacaktır.</p>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-md-2">Ana Sayfaya Dön</a>
                            <a href="@Url.Action("MyOrders", "Order")" class="btn btn-outline-primary">Siparişlerimi Görüntüle</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Tarayıcı geçmişinde geri gitmeyi engelle
        history.pushState(null, null, document.URL);
        window.addEventListener('popstate', function () {
            history.pushState(null, null, document.URL);
        });
    </script>
} 