@model IEnumerable<TabloX.Models.Category>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Kategoriler</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Kategori Ekle
            </a>
        }
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@category.Name</h5>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="card-text text-muted">@category.Description</p>
                        }
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i> İncele
                                </a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i> Düzenle
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-trash"></i> Sil
                                    </a>
                                }
                            </div>
                            @if (category.Products != null)
                            {
                                <small class="text-muted">
                                    <i class="bi bi-grid"></i> @category.Products.Count eser
                                </small>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 