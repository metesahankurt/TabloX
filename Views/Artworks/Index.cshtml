@model IEnumerable<TabloX2.Models.Artwork>
@{
    ViewData["Title"] = "Eserler";
    var categories = ViewBag.Categories as List<TabloX2.Models.Category>;
    int? selectedCategory = ViewBag.SelectedCategory as int?;
    string search = ViewBag.Search as string;
}

<h2>Eserler</h2>

<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-md-4">
                <label class="form-label">Kategori</label>
                <select name="categoryId" class="form-select">
                    <option value="">Tümü</option>
                    @if (categories != null)
                    {
                        foreach (var cat in categories)
                        {
                            if (selectedCategory == cat.Id)
                            {
                                <option value="@cat.Id" selected>@cat.Name</option>
                            }
                            else
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        }
                    }
                </select>
            </div>
            <div class="col-md-5">
                <label class="form-label">Arama</label>
                <input type="text" name="search" class="form-control" placeholder="Başlık veya açıklama..." value="@search" />
            </div>
            <div class="col-md-3 d-grid">
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </div>
        </form>
    </div>
</div>

@if (User.IsInRole("Admin"))
{
    <a class="btn btn-primary mb-2" asp-area="Admin" asp-controller="Artworks" asp-action="Create">Yeni Eser Ekle</a>
}
<div class="artwork-list-cards">
@foreach (var item in Model)
{
    <div class="artwork-card d-flex align-items-center mb-4 p-3 bg-white rounded shadow-sm flex-wrap">
        <div class="artwork-card-img me-4 mb-2 mb-md-0">
            <img src="@item.ImageUrl" alt="@item.Title" style="width:72px;height:72px;object-fit:cover;border-radius:10px;box-shadow:0 2px 8px rgba(0,0,0,0.08);" />
        </div>
        <div class="flex-grow-1">
            <div class="fw-bold fs-5 mb-1">@item.Title</div>
            <div class="text-muted small mb-1">Kategori: <b>@item.Category?.Name</b> | Sanatçı: <b>@item.Artist?.Name</b></div>
            <div class="fw-bold text-primary mb-2">@item.Price.ToString("C")</div>
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm artwork-btn artwork-detail">Detay</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@item.Id" class="btn btn-outline-success btn-sm artwork-btn">Sepete Ekle</a>
                    <a asp-controller="Orders" asp-action="Checkout" asp-route-artworkId="@item.Id" class="btn btn-success btn-sm artwork-btn artwork-buy">Satın Al</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-success btn-sm artwork-btn">Sepete Ekle (Giriş Yap)</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-sm artwork-btn artwork-buy">Satın Al (Giriş Yap)</a>
                }
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm artwork-btn artwork-delete">Sil</a>
                }
            </div>
        </div>
    </div>
}
</div> 