@model TabloX2.Models.Artwork
@{
    ViewData["Title"] = Model.Title;
}
<div class="container">
    <div class="artwork-detail-container">
        <div class="artwork-detail-info">
            <div class="artwork-detail-title">
                @Model.Title
            </div>
            <div class="artwork-detail-meta mb-2">
                <div class="meta-row"><span class="meta-icon"><i class="bi bi-person-fill"></i></span> <b>@Model.Artist?.Name</b></div>
                <div class="meta-row"><span class="meta-icon"><i class="bi bi-info-circle"></i></span> <span class="text-muted small">@Model.Artist?.Bio</span></div>
                <div class="meta-row"><span class="meta-icon"><i class="bi bi-tags-fill"></i></span> @Model.Category?.Name</div>
                <div class="meta-row"><span class="meta-icon"><i class="bi bi-currency-dollar"></i></span> <span style="font-size:1.3rem;font-weight:700;">@Model.Price.ToString("C2")</span></div>
            </div>
            <div class="artwork-detail-desc mb-4"><i class="bi bi-card-text"></i> @Model.Description</div>
            <div class="d-flex gap-2 mb-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success btn-lg"><i class="bi bi-cart-plus me-1"></i>Sepete Ekle</a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-lg"><i class="bi bi-cart-plus me-1"></i>Sepete Ekle (Giriş Yap)</a>
                }
                <a asp-action="Index" class="btn btn-secondary btn-lg"><i class="bi bi-collection me-1"></i>Tüm Eserler</a>
            </div>
        </div>
        <div>
            <img src="@Model.HighResImageUrl" alt="@Model.Title" class="artwork-detail-image" id="mainArtworkImg" />
        </div>
    </div>
    <div class="artwork-detail-extra mt-5">
        <div class="extra-item"><span class="extra-icon"><i class="bi bi-arrows-angle-expand"></i></span> <b>Boyut:</b> 60 x 80 cm</div>
        <div class="extra-item"><span class="extra-icon"><i class="bi bi-easel"></i></span> <b>Malzeme:</b> Tuval üzerine yağlı boya</div>
        <div class="extra-item"><span class="extra-icon"><i class="bi bi-award"></i></span> <b>Sertifika:</b> Orijinallik Sertifikalı</div>
        <div class="extra-item"><span class="extra-icon"><i class="bi bi-thermometer-snow"></i></span> <b>Saklama Koşulları:</b> Serin ve kuru ortamda saklayınız.</div>
        <div class="extra-item"><span class="extra-icon"><i class="bi bi-check-circle"></i></span> <b>Ürün Durumu:</b> Çerçeveli, Restorasyon görmedi, Orijinal</div>
    </div>
</div>
<script>
    document.getElementById('mainArtworkImg').onclick = function() {
        var modal = new bootstrap.Modal(document.getElementById('artworkModal'));
        modal.show();
    };
</script>
<!-- Modal for fullscreen image -->
<div class="modal fade" id="artworkModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg">
    <div class="modal-content bg-transparent border-0">
      <img src="@Model.HighResImageUrl" class="modal-img" alt="@Model.Title" />
    </div>
  </div>
</div> 