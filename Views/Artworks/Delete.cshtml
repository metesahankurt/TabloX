@model TabloX2.Models.Artwork
@{
    ViewData["Title"] = "Eser Sil";
}
<h2>Eser Sil</h2>
<h4>Bu eseri silmek istediğinize emin misiniz?</h4>
<div>
    <h5>@Model.Title</h5>
    <p>Kategori: @Model.Category?.Name</p>
    <p>Sanatçı: @Model.Artist?.Name</p>
    <p>Fiyat: @Model.Price.ToString("C")</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sil</button>
    <a asp-action="Index" class="btn btn-secondary">Vazgeç</a>
</form> 