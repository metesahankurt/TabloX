@model IEnumerable<TabloX2.Models.CartItem>
@{
    ViewData["Title"] = "Sepetim";
    decimal total = Model.Sum(i => i.Artwork.Price * i.Quantity);
}
<h2>Sepetim</h2>
@if (!Model.Any())
{
    <p>Sepetinizde ürün yok.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th></th>
                <th>Eser</th>
                <th>Sanatçı</th>
                <th>Adet</th>
                <th>Fiyat</th>
                <th>Toplam</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.Artwork.ImageUrl" alt="@item.Artwork.Title" style="width:60px; height:40px; object-fit:cover; border-radius:4px;" /></td>
                <td>@item.Artwork.Title</td>
                <td>@item.Artwork.Artist?.Name</td>
                <td>
                    <form asp-action="Decrease" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-outline-secondary btn-sm">-</button>
                    </form>
                    <span class="mx-2">@item.Quantity</span>
                    <form asp-action="Increase" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-outline-secondary btn-sm">+</button>
                    </form>
                </td>
                <td>@item.Artwork.Price.ToString("C2")</td>
                <td>@string.Format("{0:C2}", item.Artwork.Price * item.Quantity)</td>
                <td>
                    <form asp-action="Remove" method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Kaldır</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <div class="text-end">
        <h4>Toplam: @string.Format("{0:C2}", total)</h4>
        <a asp-controller="Orders" asp-action="Checkout" class="btn btn-success">Siparişi Tamamla</a>
    </div>
} 