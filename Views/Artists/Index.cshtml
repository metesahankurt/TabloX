@model IEnumerable<TabloX2.Models.Artist>
@{
    ViewData["Title"] = "Sanatçılar";
    var artists = Model?.ToList() ?? new List<Artist>();
    string search = ViewBag.Search as string;
}

<div class="artists-page">
    <div class="container py-4">
        <div class="page-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">Sanatçılar</h1>
                    <p class="text-muted">Galerimizdeki tüm sanatçıları keşfedin</p>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-4 text-md-end">
                        <a class="btn-new-artist" asp-action="Create">
                            <i class="bi bi-plus-lg me-2"></i>
                            Yeni Sanatçı Ekle
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="search-section mb-4">
            <div class="row">
                <div class="col-md-12">
                    <div class="search-box">
                        <i class="bi bi-search search-icon"></i>
                        <input type="text" id="searchInput" class="form-control" placeholder="Sanatçı ara..." value="@search">
                    </div>
                </div>
            </div>
        </div>

        <div class="artists-grid">
            <div class="row g-4" id="artistsGrid">
                @foreach (var artist in artists)
                {
                    <div class="col-md-4 mb-4 artist-card">
                        <div class="card h-100">
                            <div class="card-body">
                                <div class="artist-avatar">
                                    <div class="avatar-circle" style="background-color: #E4002B;">
                                        <span class="avatar-text">@artist.Name[0]@artist.Surname[0]</span>
                                    </div>
                                </div>
                                <div class="artist-info">
                                    <h5>@artist.Name @artist.Surname</h5>
                                    <p class="text-muted">@artist.Country</p>
                                </div>
                                <div class="card-actions">
                                    <a href="@Url.Action("Details", new { id = artist.Id })" class="btn btn-outline-primary">
                                        <i class="fas fa-info-circle me-1"></i> Detaylar
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a href="@Url.Action("Edit", new { id = artist.Id })" class="btn btn-outline-secondary">
                                            <i class="fas fa-edit me-1"></i> Düzenle
                                        </a>
                                        <a href="@Url.Action("Delete", new { id = artist.Id })" class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i> Sil
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: #ecf0f1 !important;
    }

    .artists-page {
        background-color: #ecf0f1 !important;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .page-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 2.5rem;
        color: #E4002B;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .btn-new-artist {
        background: linear-gradient(45deg, #E4002B, #FF1744);
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(228, 0, 43, 0.2);
    }

    .btn-new-artist:hover {
        background: linear-gradient(45deg, #CC0027, #E4002B);
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(228, 0, 43, 0.3);
        color: white;
    }

    .search-box {
        position: relative;
    }

    .search-icon {
        position: absolute;
        left: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
    }

    .search-box input {
        padding-left: 2.5rem;
        border-radius: 8px;
        border: 2px solid #dee2e6;
        transition: all 0.3s ease;
    }

    .search-box input:focus {
        border-color: #E4002B;
        box-shadow: 0 0 0 0.2rem rgba(228, 0, 43, 0.25);
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        background: white;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .artist-avatar {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .avatar-circle {
        width: 100px;
        height: 100px;
        background: linear-gradient(45deg, #E4002B, #FF1744);
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        font-weight: bold;
        color: white;
        margin: 0 auto;
    }

    .avatar-img {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
    }

    .card-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.5rem;
        color: #2c3e50;
        margin-bottom: 0.5rem;
        text-align: center;
    }

    .card-text {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-outline-primary {
        color: #E4002B;
        border-color: #E4002B;
    }

    .btn-outline-primary:hover {
        background-color: #E4002B;
        border-color: #E4002B;
        color: white;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#searchInput').on('keyup', function() {
                var searchText = $(this).val().toLowerCase();
                
                $('.artist-card').each(function() {
                    var card = $(this);
                    var text = card.text().toLowerCase();
                    
                    if (text.includes(searchText)) {
                        card.show();
                    } else {
                        card.hide();
                    }
                });
            });
        });
    </script>
} 