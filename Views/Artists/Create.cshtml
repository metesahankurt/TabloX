@model TabloX2.Models.Artist
@{
    ViewData["Title"] = "Yeni Sanatçı";
}

<div class="create-artist-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h2 class="h4 mb-0 text-primary">
                                <i class="bi bi-person-plus-fill me-2"></i>
                                Yeni Sanatçı Ekle
                            </h2>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Geri Dön
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>
                            
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Name" class="form-control" placeholder="Ad" required />
                                        <label asp-for="Name"></label>
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating mb-3">
                                        <input asp-for="Surname" class="form-control" placeholder="Soyad" required />
                                        <label asp-for="Surname"></label>
                                        <span asp-validation-for="Surname" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Country" class="form-control" placeholder="Ülke" required />
                                <label asp-for="Country"></label>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-3">
                                <textarea asp-for="Bio" class="form-control" placeholder="Biyografi" style="height: 100px" required></textarea>
                                <label asp-for="Bio"></label>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>

                            <div class="form-floating mb-4">
                                <textarea asp-for="Description" class="form-control" placeholder="Açıklama" style="height: 150px"></textarea>
                                <label asp-for="Description"></label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <button type="submit" class="btn btn-primary btn-lg px-4">
                                    <i class="bi bi-check-circle-fill me-2"></i> Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .create-artist-page {
        background-color: #f8f9fa;
        min-height: 100vh;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    }

    .form-floating > .form-control {
        border: 1px solid #ced4da;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .form-floating > .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn-primary {
        background: linear-gradient(45deg, #E4002B, #FF1744);
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(45deg, #CC0027, #E4002B);
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(228, 0, 43, 0.3);
    }

    .btn-outline-secondary {
        border-radius: 8px;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        transform: translateY(-2px);
    }

    .text-primary {
        color: #E4002B !important;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 