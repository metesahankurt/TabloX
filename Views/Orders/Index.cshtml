@model IEnumerable<TabloX2.Models.Order>
@{
    ViewData["Title"] = "Siparişlerim";
}
<h2>Siparişlerim</h2>
@if (!Model.Any())
{
    <p>Henüz siparişiniz yok.</p>
}
else
{
    foreach (var order in Model)
    {
        <div class="card mb-3">
            <div class="card-header">
                <strong>Sipariş Tarihi:</strong> @order.OrderDate.ToString("g")
            </div>
            <div class="card-body">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Eser</th>
                            <th>Adet</th>
                            <th>Fiyat</th>
                            <th>Toplam</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in order.Items)
                    {
                        <tr>
                            <td>@item.Artwork?.Title</td>
                            <td>@item.Quantity</td>
                            <td>@item.Artwork?.Price.ToString("C")</td>
                            <td>@((item.Artwork?.Price ?? 0) * item.Quantity).ToString("C")</td>
                        </tr>
                    }
                    </tbody>
                </table>
                <div class="text-end">
                    <strong>Toplam: @order.Items.Sum(i => (i.Artwork?.Price ?? 0) * i.Quantity).ToString("C")</strong>
                </div>
            </div>
        </div>
    }
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
} 