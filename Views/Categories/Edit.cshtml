@model TabloX2.Models.Category
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="edit-category-page">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-header text-white py-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="h4 mb-0">
                                <i class="bi bi-pencil-square me-2"></i>
                                Kategori Düzenle
                            </h3>
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left me-1"></i> Geri Dön
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <form asp-action="Edit" method="post">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            <input type="hidden" asp-for="Id" />

                            <div class="form-group mb-4">
                                <label asp-for="Name" class="form-label">Kategori Adı</label>
                                <input asp-for="Name" class="form-control" placeholder="Kategori adını girin" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Description" class="form-label">Açıklama</label>
                                <textarea asp-for="Description" class="form-control" rows="4" placeholder="Kategori açıklamasını girin"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                                <a asp-action="Index" class="btn btn-light me-2">
                                    <i class="bi bi-x-lg me-1"></i> İptal
                                </a>
                                <button type="submit" class="btn btn-tablo">
                                    <i class="bi bi-check-lg me-1"></i> Değişiklikleri Kaydet
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .edit-category-page {
        background-color: #f8f9fa;
        min-height: calc(100vh - 60px);
        padding: 2rem 0;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background: linear-gradient(45deg, #E4002B, #FF1744);
        border-radius: 12px 12px 0 0 !important;
        border-bottom: none;
    }

    .form-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.5rem;
    }

    .form-control {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 0.75rem;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #E4002B;
        box-shadow: 0 0 0 0.2rem rgba(228, 0, 43, 0.25);
    }

    .btn-tablo {
        background: linear-gradient(45deg, #E4002B, #FF1744);
        color: white;
        border: none;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-tablo:hover {
        background: linear-gradient(45deg, #FF1744, #E4002B);
        transform: translateY(-2px);
        color: white;
        box-shadow: 0 4px 15px rgba(228, 0, 43, 0.3);
    }

    .btn-light {
        background: #fff;
        border: 1px solid #dee2e6;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-light:hover {
        background: #f8f9fa;
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-light {
        border-width: 2px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-outline-light:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(255, 255, 255, 0.1);
    }

    .alert-danger {
        border-left: 4px solid #dc3545;
        border-radius: 8px;
    }
</style>

<style media="screen and (max-width: 768px)">
    .edit-category-page {
        padding: 1rem 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-tablo, .btn-light {
        width: 100%;
        margin: 0.5rem 0;
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 