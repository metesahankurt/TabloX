@model IEnumerable<TabloX2.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
}

<div class="categories-page">
    <div class="container py-4">
        <div class="page-header mb-4">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">Kategoriler</h1>
                    <p class="text-muted">Sanat eserlerini kategorilere göre keşfedin</p>
                </div>
                @if (User.IsInRole("Admin"))
                {
                    <div class="col-md-4 text-md-end">
                        <a class="btn-new-category" asp-action="Create">
                            <i class="bi bi-plus-lg me-2"></i>
                            Yeni Kategori Ekle
                        </a>
                    </div>
                }
            </div>
        </div>

        <div class="categories-grid">
            <div class="row g-4">
                @foreach (var category in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="category-card">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="category-icon mb-3">
                                        <i class="bi bi-collection"></i>
                                    </div>
                                    <h3 class="card-title">@category.Name</h3>
                                    <p class="card-text">@(category.Description ?? "Bu kategori için açıklama bulunmuyor.")</p>
                                    <div class="card-actions">
                                        <a href="@Url.Action("Index", "Artworks", new { categoryId = category.Id })" class="btn btn-outline-primary">
                                            <i class="fas fa-images me-1"></i> Eserleri Gör
                                        </a>
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <a href="@Url.Action("Edit", new { id = category.Id })" class="btn btn-outline-secondary">
                                                <i class="fas fa-edit me-1"></i> Düzenle
                                            </a>
                                            <a href="@Url.Action("Delete", new { id = category.Id })" class="btn btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i> Sil
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .categories-page {
        background-color: #f8f9fa;
        min-height: 100vh;
        padding: 2rem 0;
    }

    .page-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 2.5rem;
        color: #E4002B;
        margin-bottom: 0.5rem;
        font-weight: 600;
    }

    .btn-new-category {
        background: linear-gradient(45deg, #E4002B, #FF1744);
        color: white;
        padding: 0.8rem 1.5rem;
        border-radius: 8px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        font-weight: 500;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 4px 6px rgba(228, 0, 43, 0.2);
    }

    .btn-new-category:hover {
        background: linear-gradient(45deg, #CC0027, #E4002B);
        transform: translateY(-2px);
        box-shadow: 0 6px 12px rgba(228, 0, 43, 0.3);
        color: white;
    }

    .category-card {
        height: 100%;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        background: white;
        height: 100%;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .category-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(45deg, #E4002B, #FF1744);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
        color: white;
        font-size: 2rem;
        transition: all 0.3s ease;
    }

    .card:hover .category-icon {
        transform: scale(1.1);
        background: linear-gradient(45deg, #CC0027, #E4002B);
    }

    .card-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 1.5rem;
        color: #2c3e50;
        margin: 1rem 0;
        text-align: center;
    }

    .card-text {
        color: #6c757d;
        font-size: 0.95rem;
        line-height: 1.5;
        margin-bottom: 1.5rem;
        text-align: center;
    }

    .card-actions {
        display: flex;
        gap: 0.5rem;
        justify-content: center;
        flex-wrap: wrap;
    }

    .btn {
        padding: 0.5rem 1rem;
        border-radius: 6px;
        font-size: 0.9rem;
        transition: all 0.3s ease;
    }

    .btn-outline-primary {
        color: #E4002B;
        border-color: #E4002B;
    }

    .btn-outline-primary:hover {
        background-color: #E4002B;
        border-color: #E4002B;
        color: white;
    }

    .btn-outline-secondary:hover {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        border-color: #dc3545;
    }
</style> 