@{
    ViewData["Title"] = "Şifremi Unuttum";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <img src="/Logo/tabloXLogo.png" style="height:48px; max-width:120px; object-fit:contain;" class="mb-3" />
                        <h2 class="fw-bold text-dark mb-2">Şifremi Unuttum</h2>
                        <p class="text-muted">Kayıtlı e-posta adresinizi girin, size şifre sıfırlama bağlantısı gönderelim.</p>
                    </div>
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success text-center">@ViewBag.Message</div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div>@error.ErrorMessage</div>
                            }
                        </div>
                    }
                    <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <div class="form-floating mb-4">
                            <input type="email" name="Email" class="form-control form-control-lg rounded-3" placeholder="E-posta" required />
                            <label for="Email">E-posta</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg w-100 rounded-3">
                            <i class="fas fa-envelope me-2"></i>Şifre Sıfırlama Linki Gönder
                        </button>
                    </form>
                    <div class="text-center mt-4">
                        <a asp-action="Login" class="text-primary text-decoration-none fw-semibold">
                            <i class="fas fa-arrow-left me-1"></i> Giriş Ekranına Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border: none;
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    .form-control:focus {
        border-color: #e31837;
        box-shadow: 0 0 0 0.2rem rgba(227, 24, 55, 0.15);
    }
    .btn-primary {
        background: #e31837;
        border: none;
        padding: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    .btn-primary:hover {
        background: #c41530;
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(227, 24, 55, 0.3);
    }
    .text-primary {
        color: #e31837 !important;
    }
    .alert {
        border: none;
        background-color: #fff3f5;
        color: #e31837;
        border-left: 4px solid #e31837;
    }
</style> 