@{
    ViewData["Title"] = "Kayıt Onayı";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-envelope-check me-2"></i>
                        Email Doğrulama
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="bi bi-envelope-paper text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h5 class="mb-3">Hesabınız başarıyla oluşturuldu!</h5>
                    <p class="text-muted">
                        Lütfen <strong>@ViewBag.Email</strong> adresine gönderilen doğrulama emailini kontrol edin.
                        Hesabınızı aktifleştirmek için emaildeki bağlantıya tıklayın.
                    </p>
                    <hr class="my-4">
                    <p class="small text-muted">
                        Email gelmediyse spam klasörünü kontrol edin veya yeni bir doğrulama emaili gönderin.
                    </p>
                    <form asp-action="ResendEmailConfirmation" method="post" class="mt-3">
                        <input type="hidden" name="email" value="@ViewBag.Email">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-envelope-paper me-2"></i>
                            Doğrulama Emailini Tekrar Gönder
                        </button>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Login" class="btn btn-link">Giriş sayfasına dön</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
} 