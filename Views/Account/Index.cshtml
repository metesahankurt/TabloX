@model Microsoft.AspNetCore.Identity.IdentityUser
@{
    ViewData["Title"] = "Hesabım";
}
<h2>Hesabım</h2>
<div class="card">
    <div class="card-body">
        <p><strong>Kullanıcı Adı:</strong> @Model.UserName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <a href="/Identity/Account/Manage/ChangePassword" class="btn btn-outline-primary">Şifre Değiştir</a>
        <a href="/Identity/Account/Manage" class="btn btn-outline-secondary">Profilimi Düzenle</a>
    </div>
</div> 