@{
    ViewData["Title"] = "Hesap Aktifleştirildi";
    var email = ViewBag.Email as string;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Hesabınız Aktifleştirildi!</h3>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-check-double fa-4x text-success mb-3"></i>
                    <p class="lead">Tebrikler, <strong>@email</strong> adresine ait hesabınız başarıyla aktifleştirildi.</p>
                    <a href="/Account/Login" class="btn btn-primary mt-3">Giriş Yap</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
} 