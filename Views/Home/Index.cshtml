@model IEnumerable<TabloX2.Models.Artwork>
@{
    ViewData["Title"] = "TabloX'e Hoş Geldiniz";
}
<div class="text-center mt-4">
    <h1 class="display-4">TabloX'e Hoş Geldiniz</h1>
    <p class="lead">Benzersiz sanat eserlerini keşfedin ve koleksiyonunuza ekleyin.</p>
</div>
<hr />
<div class="row">
    @if (Model != null && Model.Any())
    {
        foreach (var artwork in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@artwork.ImageUrl" class="card-img-top" alt="@artwork.Title" style="max-height:220px;object-fit:cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@artwork.Title</h5>
                        <p class="card-text">@artwork.Artist?.Name</p>
                        <p class="card-text fw-bold">@artwork.Price.ToString("C")</p>
                        <div class="mt-auto d-flex flex-column gap-2">
                            <a asp-controller="Artworks" asp-action="Details" asp-route-id="@artwork.Id" class="btn btn-outline-primary btn-sm">Detay</a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Cart" asp-action="Add" asp-route-id="@artwork.Id" class="btn btn-success btn-sm">Sepete Ekle</a>
                                <a asp-controller="Orders" asp-action="Checkout" asp-route-artworkId="@artwork.Id" class="btn btn-warning btn-sm">Satın Al</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-success btn-sm">Sepete Ekle (Giriş Yap)</a>
                                <a asp-controller="Account" asp-action="Login" class="btn btn-warning btn-sm">Satın Al (Giriş Yap)</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12"><p>Henüz eser eklenmedi.</p></div>
    }
</div>
